
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/Content/Css/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/Css/Site.css" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-3">
                <form action="/Usuario/Adicionar" method="post">

                    <div class="form-group">
                        @Html.AntiForgeryToken()
                        @Html.ValidationMessage("usuario.Nome")
                        <label for="nome">Nome</label>
                        <input id="nome" name="usuario.Nome" value="@ViewBag.Usuario.Nome" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input id="email" name="usuario.Email" value="@ViewBag.Usuario.Email" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="senha">Senha</label>
                        <input id="senha" name="usuario.Senha" type="password" value="@ViewBag.Usuario.Senha" class="form-control" />
                    </div>

                    <input class="btn btn-primary" type="submit" value="Cadastrar" />
                </form>
            </div>
        </div>
    </div>
</body>
</html>

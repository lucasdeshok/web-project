<script type="text/javascript" src="~/Scripts/jquery-1.10.2.js"></script>
<script type="text/javascript">
    function decrementar(produtoId) {
        var url = "@Url.Action("DecrementarEstoque", "Produto")";
        var params = { id: produtoId };
        $.post(url, params, atualiza);
    }

    function incrementar(produtoId) {
        var url = "@Url.Action("IncrementarEstoque", "Produto")";
        var params = { id: produtoId };
        $.post(url, params, atualiza);
    }

    function atualiza(resposta) {
        var elemento = $("#estoque" + resposta.Id);
        elemento.html(resposta.Quantidade);
    }
</script>

@model IList<WebProject.Models.Produto>
<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Código</th>
            <th>Nome</th>
            <th>Estoque</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model)
        {
            <tr>
                <td>@produto.Id</td>
                <td>@produto.Codigo</td>
                <td>@Html.ActionLink(produto.Nome, "Visualiza", new { id = produto.Id })</td>
                <td id="estoque@(produto.Id)">@produto.Estoque</td>
                <td><a href="#" onclick="incrementar(@produto.Id)">Incrementar</a></td>
                <td><a href="#" onclick="decrementar(@produto.Id)">Decrementar</a></td>
            </tr>
        }
    </tbody>
</table>